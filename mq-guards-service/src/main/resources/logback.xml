<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 属性定义 -->
    <property name="application" value="mq-guards"/>
    <!-- 控制台输出格式: 彩色日志 -->
    <property name="CONSOLE_LOG_PATTERN" value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(%5p) %clr([%15.15t]){magenta} %clr(%mdc{traceId:----}){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%wEx" />
    <!-- 文件输出格式: 打印完整日志信息 -->
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] [%mdc{traceId:----}] %-40.40logger{39} - %m%n%ex" />
    <!-- 请求日志输出格式 -->
    <property name="REQUEST_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] [%mdc{traceId:----}] %-40.40logger{39} - %m%n%ex" />

    <!-- 输出到控制台 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>
    <appender name="REQUEST_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${REQUEST_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- 输出到Info日志文件: 业务关键信息, 应简洁易懂，避免空间浪费-->
    <appender name="INFO_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/service-${application}-main.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/service-${application}-main.%d{yyyyMMdd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 输出到Error日志文件: 业务错误信息和堆栈信息, 应记录详细内容，方便排查-->
    <appender name="ERROR_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/service-${application}-error.log</file>
        <!-- 日志级别过滤:只打印ERROR级别的日志 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>NEUTRAL</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/service-${application}-error.%d{yyyyMMdd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- request.log: 调用信息, 记录调用的入参和出参, 记录接口耗时, 调用是否成功, 方便进行统计 -->
    <appender name="REQUEST_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/service-${application}-request.log</file>
        <encoder>
            <pattern>${REQUEST_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/service-${application}-request.%d{yyyyMMdd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="INFO_LOG" />
        <appender-ref ref="ERROR_LOG" />
    </root>

    <logger name="com.hk.base.dubbo.filter.TraceLogFilter" additivity="false" level="INFO">
        <appender-ref ref="REQUEST_CONSOLE" />
        <appender-ref ref="REQUEST_LOG" />
    </logger>

    <logger name="org.apache.http" level="WARN"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.apache.zookeeper.ClientCnxn" level="INFO"/>
    <logger name="com.alibaba.dubbo.remoting.exchange.support.header" level="INFO"/>
    <!-- 打印mongodb操作的具体语句 -->
    <logger name="org.springframework.data.mongodb.core" level="DEBUG" />
</configuration>


